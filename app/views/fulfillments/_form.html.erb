<%= form_for([@order, fulfillment]) do |f| %>
  <% if fulfillment.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(fulfillment.errors.count, "error") %> prohibited this fulfillment from being saved:</h2>

      <ul>
      <% fulfillment.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :ship_type %>
    <%= f.select :ship_type, Fulfillment.ship_types.keys,
                  promtp: 'Select a payment method' %>
  </div>

  <div class="field">
    <%= f.label :carrier %>
    <%= f.text_field :carrier %>
  </div>

  <div class="field">
    <%= f.label :tracking_number %>
    <%= f.text_field :tracking_number %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
